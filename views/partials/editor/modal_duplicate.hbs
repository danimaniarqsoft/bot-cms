<form ng-submit="duplicateThread(ui.dupe_thread_name)">

<div class="editor_modal_box" ng-if="ui.dupethread">
  <header>
    <h1>Duplicar Flujo</h1>
  </header>
  <section>
    <div class="bigform">
          <p>
            <label>Nombre del Flujo:</label>
            <input ng-model="ui.dupe_thread_name" type="text" required />
          </p>
    </div>
  </section>
  <footer>
    <button type="submit">Guardar</button>
    <button type="button" ng-click="ui.dupethread=false;">Cancelar</button>
  </footer>
</div>
</form>
