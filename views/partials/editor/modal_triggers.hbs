<div class="editor_modal_box" ng-if="ui.triggers">
  <header>
    <h1>Agregar Disparador</h1>

    <form name="formHolder.add_trigger" ng-submit="addTrigger()">

        <p>
            <label>Tipo de Disparador</label>
              <select ng-model="trigger.type">
                <option value="string">Palabra Exácta</option>
                <option value="regexp">Expresión Regular</option>
                <option value="intent" ng-if="ui.intents && ui.intents.length">Intención desde LUIS.ai</option>
            </select>
        </p>

        <p ng-if="trigger.type=='intent'">
            <label>Intensión</label>
            <select ng-model="trigger.pattern" ng-options="intent.name as intent.name for intent in ui.intents track by intent.name">
            </select>
        </p>

        <p ng-if="trigger.type!='intent'">
            <label>Patrón</label>
            <input type="text" ng-model="trigger.pattern" required placeholder="New Trigger" />
        </p>

        <button type="submit" ng-disabled="!trigger.pattern" class="primary">Agregar</button>
    </form>
  </header>
  <section>
  <table class="sheet">
    <tr>
      <th></th>
      <th>
        Tipo de Disparador
      </th>
      <th>
        Patrón
      </th>
    </tr>
    <tr ng-repeat="trigger in command.triggers">
      <td width="22">
        <button class="delete" ng-click="removeTrigger($index)"></button>
      </td>
      <td width="50">
        {% trigger.type %}
      </td>
      <td>
        {% trigger.pattern %}
      </td>
    </tr>
  </table>
</section>
<footer>
  <button ng-click="closeTriggers()">Aceptar</button>
</footer>
</div>
